extends ../../layout/default.pug


block main 
  .container.my-5 
    .row.justify-content-center 
      .col-8 
        h1(class="text-center") Đổi mật khẩu
        form(
          action="/user/password/reset"
          method="post"
        )
          div(class="form-group")
            label(for="password") Mật khẩu mới 
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="passwordConfirm") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control" 
              id="passwordConfirm"
              name="passwordConfirm" 
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đổi mật khẩu

      
