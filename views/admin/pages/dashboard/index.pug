extends ../../layouts/default.pug
block main 
  h1 Trang tổng quan

  .row.mt-4 
    .col-12 
      .card.mb-4 
        .card-header Thông tin tài khoản 
        .card-body 
          if(user.avatar)
            img(
              src=user.avatar 
              style="height: 100px; width: 100px; border-radius: 50%;"
            )
          if(user.fullName)
            p Họ tên: <b>#{user.fullName}</b>
          if(user.email)
            p Email: <b>#{user.email}</b>
          if(user.phone)
            p Số điện thoại: <b>#{user.phone}</b>
          if(role.title)
          p Phân quyền: <b>#{role.title}</b>

    .col-6
      .card.mb-4 
        .card-header Danh mục sản phẩm
        .card-body 
          p Số lượng: <b>#{static.categoryProduct.total}</b>
          p Hoạt động: <b>#{static.categoryProduct.active}</b>
          p Dừng hoạt động: <b>#{static.categoryProduct.inactive}</b>
    .col-6
      .card.mb-4 
        .card-header Sản phẩm
        .card-body 
          p Số lượng: <b>#{static.products.total}</b>
          p Hoạt động: <b>#{static.products.active}</b>
          p Dừng hoạt động: <b>#{static.products.inactive}</b>
    .col-6
      .card.mb-4 
        .card-header Tài khoản admin
        .card-body 
          p Số lượng: <b>#{static.account.total}</b>
          p Hoạt động: <b>#{static.account.active}</b>
          p Dừng hoạt động: <b>#{static.account.inactive}</b>
    .col-6
      .card.mb-4 
        .card-header Tà khoản client
        .card-body 
          p Số lượng: <b>#{static.user.total}</b>
          p Hoạt động: <b>#{static.user.active}</b>
          p Dừng hoạt động: <b>#{static.user.inactive}</b>
